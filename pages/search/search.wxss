.cancel-search {
  color: #fff;
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
}



.search-warp {
  z-index: 999;
  width: 100%;
  position: fixed;
  height: 90rpx;
  background: #d44439;
}

/* 搜索结果 */

.result-warp {
  overflow: auto;
  width: 100%;
  background: #fff;
  position: fixed;
  top: 90rpx;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.hot-singer {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #979799;
  border-bottom: 1px solid #e4e4e4;
}

.hot-singer .singer-user {
  width: 33rpx;
  height: 36rpx;
  margin-right: 24rpx;
}

.hot-singer .singer-arrow {
  margin-left: 14rpx;
  width: 12rpx;
  height: 22rpx;
}

.hot-search {
  padding: 40rpx 20rpx;
}

.hot-search-title {
  color: #666;
  font-size: 28rpx;
}

.hot-search-box {
  display: flex;
  flex-wrap: wrap;
}

.hot-search-item {
  height: 64rpx;
  line-height: 64rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  margin-left: 32rpx;
  margin-right: 64rpx;
  margin-top: 32rpx;
  position: relative;
  background: #fff;
}

.hot-search-item::after {
  display: block;
  content: "";
  height: 64rpx;
  width: 64rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
  position: absolute;
  left: -32rpx;
  top: -2rpx;
  z-index: -1;
  box-sizing: border-box;
}

.hot-search-item::before {
  display: block;
  content: "";
  height: 64rpx;
  width: 64rpx;
  border: 1px solid #ccc;
  border-radius: 50%;
  position: absolute;
  right: -32rpx;
  top: -2rpx;
  z-index: -1;
  box-sizing: border-box;
}

.history-search-item {
  height: 90rpx;
  margin: 0 20rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.history-icon {
  width: 32rpx;
  height: 32rpx;
}

.detele-icon {
  width: 25rpx;
  height: 25rpx;
}

.history-search-title text {
  line-height: 90rpx;
  color: #333;
  font-size: 28rpx;
  margin-left: 22rpx;
}

.history-search-title {
  display: flex;
  align-items: center;
}

.search-preview {
  height: 90rpx;
  margin-left: 20rpx;
  border-bottom: 1px solid #ccc;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #369;
}

/* search-navbar */

.search-navbar {
  z-index: 1000;
  background: #d44439;
  /* height: 75rpx;  */
  overflow-x: auto;
}

.search-result-warp .weui-tab__panel {
  padding-top: 40px;
}

.search-navbar .weui-navbar__item {
  color: #fff;
  width: 125rpx;
  flex: none;
  margin: 0rpx 25rpx;
  font-size: 30rpx;
  padding: 10rpx 0;
}

.search-navbar .weui-navbar__item.weui-bar__item_on {
  font-weight: bold;
  color: #fff;
}

.search-navbar .weui-navbar__slider {
  bottom: 12rpx;
  width: 62rpx;
  background: #fff;
  border-radius: 20%;
}

.search-suggest-item {
  position: relative;
  border-bottom: 1px solid #e4e4e4;
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 65rpx;
  font-size: 28rpx;
  color: #333333;
}
.search-suggest-item image {
  position: absolute;
  width: 29rpx;
  height: 29rpx;
  left: -40rpx;
  top: 50%;
  transform: translateY(-45%);
}
.searchNone {
  position: absolute;
  top: 20%;
  font-size: 28rpx;
  color: #666;
  left: 50%;
  transform: translateX(-50%);
}