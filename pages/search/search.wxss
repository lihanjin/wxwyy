.search-input {
  height: 60rpx;
  width: 535rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 25rpx;
}

.inputph {
  color: #ffa9a3;
  text-align: left;
  text-indent: 190rpx;
}

.search {
  height: 90rpx;
  overflow: hidden;
  align-items: center;
  display: flex;
  justify-content: center;
}

.search-active  .inputph {
  text-align: left;
}

.search-active .search-img {
  left: 20rpx;
}

.search-active {
  height: 60rpx;
  width: 600rpx;
  background: rgba(255, 255, 255, .05);
  position: absolute;
  font-size: 24rpx;
  color: #fff;
  left: 60rpx;
   border-radius: 120rpx;
}

.search input {
  text-align: center;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  height: 60rpx;
  width: 100%;
  background: rgba(255, 255, 255, .05);
  /* padding-left: 120rpx; */
  font-size: 24rpx;
  color: #fff;
  border-radius: 120rpx;
}

.music-gif {
  width: 48rpx;
  height: 48rpx;
}

.search-img {
  position: absolute;
  width: 27rpx;
  height: 25rpx;
  left: 130rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1000;
}

