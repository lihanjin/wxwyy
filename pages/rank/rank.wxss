/* pages/rank/rank.wxss */

.rank-item {
  height: 214rpx;
  border-bottom: 1px solid #e4e4e4;
}

.rank-item>view {
  height: 214rpx;
  margin: 0 20rpx;
  padding: 6rpx 0;
  display: flex;
  flex-direction: row;
}

.rank-item image {
  flex: 0 0 200rpx;
  width: 200rpx;
  height: 200rpx;
}

.song-list {
  padding: 0 40rpx;
  display: flex;
  flex: 1;
  flex-direction: column;
  height: 200rpx;
  font-size: 24rpx;
  overflow: hidden;
}

.rank-song-item {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  line-height: 60rpx;
}
