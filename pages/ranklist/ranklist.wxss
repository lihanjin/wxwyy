/* pages/ranklist/ranklist.wxss */

.ranklist-banner {
  width: 100%;
  height: 560rpx;
}

.ranklist-banner image {
  width: 100%;
  height: 560rpx;
}

.banneropcity {
  position: absolute;
  top: 0;
  width: 100%;
  height: 560rpx;
  background: rgba(0, 0, 0, 0.2);
  z-index: 999;
}

.rankName {
  font-style: italic;
  font-weight: 700;
  letter-spacing: 1px;
  font-size: 36rpx;
  color: #fff;
  line-height: 36rpx;
  position: absolute;
  left: 60rpx;
  bottom: 100rpx;
}

.rankTime {
  bottom: 65rpx;
  position: absolute;
  left: 60rpx;
  color: #fff;
  font-size: 22rpx;
  line-height: 28rpx;
}

.songList {
  width: 100%;
  background: #f2f3f4;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: relative;
  top: -40rpx;
  z-index: 1000;
}

.songList-play {
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  padding-left: 32rpx;
  border-bottom: 1px solid #e4e4e4;
}

.Music-play {
  display: inline-block;
  width: 44rpx;
  height: 44rpx;
  background: url(//s3.music.126.net/m/s/img/index_icon_2x.png?5207a28c3767992ca4bb6d4887c74880) no-repeat;
  background-size: 332rpx 97px;
  background-position: -48rpx 0;
}

.play-title {
  font-size: 32rpx;
  margin-left: 32rpx;
}

.play-title text {
  font-size: 28rpx;
  color: #757575;
}

.songItem {
  width: 100%;
  height: 120rpx;
  border-bottom: 1px solid #e4e4e4;
  display: flex;
  align-items: center;
}

.songItem-index {
  flex: 0 0 100rpx;
  width: 100rpx;
  text-align: center;
  color: #757575;
  font-size: 32rpx;
}

.songItem-count-name {
  font-weight: 100;
  margin-top: 8rpx;
  width: 80%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: #2e3030;
}

.songItem-count {
  flex: 1;
  line-height: 40rpx;
  overflow: hidden;
}

.songItem-count-ar {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  width: 80%;
  font-size: 24rpx;
  color: #757575;
}
