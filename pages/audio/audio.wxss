/* pages/audio/audio.wxss */

.list-content-warp {
  max-height: 400rpx;
  overflow: auto;
}

.audio-warp {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 134rpx;
  overflow: hidden;
}

audio {
  width: 100%;
  position: absolute;
  bottom: 0;
}

.audio-menu {
  position: absolute;
  height: 134rpx;
  width: 142rpx;
  background: #fcfcfc;
  border: 1px solid #e0e0e0;
  top: 0;
  right: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

image {
  width: 54rpx;
  height: 52rpx;
}

.list-warp {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  background-color: #f2f3f4;
  z-index: 4;
}

.list-header {
  display: flex;
  align-items: center;
  position: relative;
  padding: 40rpx 60rpx 20rpx 40rpx;
}

.list-header  text {
  flex: 1;
  font-size: 24rpx;
  color: #2e3030;
}

.bg-warp {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 3;
  background-color: rgba(0, 0, 0, 0.3);
}

.random-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.list-content {
  max-height: 240px;
  overflow: hidden;
  display: flex;
  align-items: center;
  height: 80rpx;
  padding: 0 60rpx 0 40rpx;
}

.list-content-icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
}

.songName {
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.list-delete-icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 20rpx;
}

.list-close {
  text-align: center;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.border-b {
  border-bottom: 1px solid #e4e4e4;
}

page .scroll {
  animation: scroll 0.2s linear 1 forwards;
}

@keyframes scroll {
  0% {
    bottom: -600rpx;
  }

  100% {
    bottom: 0rpx;
    display: block;
  }
}

.scroll-out {
  animation: scroll-out 0.2s linear 1 forwards;
}

.rotate {
  animation: rotate 5s 20s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(1turn);
  }
}

@keyframes fadein {
  0% {
    width: 100%;
  }

  100% {
    width: 40rpx;
  }
}

@keyframes fadeout {
  0% {
    width: 40rpx;
  }

  100% {
    width: 100%;
  }
}

@keyframes scroll-out {
  0% {
    bottom: 0rpx;
  }

  100% {
    bottom: -600rpx;
    display: none;
  }
}

.audio {
  position: absolute;
  bottom: 0;
  width: 576rpx;
  height: 134rpx;
  background: #fcfcfc;
  border: 1rpx solid #e0e0e0;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  padding-right: 30rpx;
}

.audio .song-img {
  position: relative;
  height: 132rpx;
  width: 132rpx;
}

.album {
  flex: 1;
  padding-top: 15rpx;
  margin-left: 17rpx;
}

.song-name {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.author {
  font-size: 24rpx;
  color: #999;
}

.audio-time {
  padding-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.pause-icon {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.audio-imgbox {
  position: relative;
}

.close-audio {
  position: absolute;
  width: 40rpx;
  height: 134rpx;
  background: #fcfcfc;
  border: 1rpx solid #e0e0e0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-audio-left {
  content: '';
  display: block;
  width: 0;
  height: 0;
  border-width: 10px;
  border-style: solid;
  border-color: #666 transparent transparent transparent;
  position: absolute;
  left: -30%;
  transform: rotate(90deg);
}

.close-audio-right {
  content: '';
  display: block;
  width: 0;
  height: 0;
  border-width: 10px;
  border-style: solid;
  border-color: #666 transparent transparent transparent;
  position: absolute;
  transform: rotate(-90deg);
  left: 30%;
}
