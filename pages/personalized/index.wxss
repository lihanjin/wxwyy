/* pages/personalized/index.wxss */

view {
  box-sizing: border-box;
}
page .newsong-list {
  padding-top: 0;
}
.personalized {
  padding-top: 150rpx;
  overflow: hidden;
}
.newsong-list {
  padding-bottom: 150rpx;
}
.personalized-title {
  position: relative;
  padding-left: 18rpx;
  font-size: 34rpx;
  color: #333;
  margin-bottom: 28rpx;
}

.personalized-title::after {
  display: block;
  content: "";
  width: 4rpx;
  height: 32rpx;
  background: #d33a31;
  position: absolute;
  top: 14rpx;
  left: 0;
}

.personalized-item image {
  vertical-align: middle;
  width: 100%;
  height: 232.5rpx;
  border-radius: 3%;
}

.personalized-item {
  position: relative;
  width: 33%;
  padding: 0 1%;
  float: left;
  color: #333;
  height: 350rpx;
}

.personalized-item text {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  padding: 6px 2px 0 6px;
  line-height: 1.2;
  font-size: 13px;
}

.personalized-box {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding-bottom: 48rpx;
  overflow: hidden;
}

.personalized-box .personalized-item-center {
  margin: 0 4rpx;
}

.hotNum {
  position: absolute;
  right: 15rpx;
  top: 4rpx;
  z-index: 3;
  padding-left: 13px;
  color: #fff;
  font-size: 24rpx;
  background-position: 0;
  background-repeat: no-repeat;
  background-size: 22rpx 20rpx;
  background-image: url(data:image/svg+xml;base64,);
}

.newsMusic-list {
  height: 110rx;
  font-size: 34rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: normal;
  color: #333;
}

.newsMusic-box {
  height: 110rx;
  display: flex;
  justify-content: space-between;
  padding-right: 20rpx;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  margin-left: 20rpx;
  padding-top: 12rpx;
  padding-bottom: 12rpx;
}

.newsMusic-play {
  display: inline-block;
  width: 44rpx;
  height: 44rpx;
  background: url(//s3.music.126.net/m/s/img/index_icon_2x.png?5207a28c3767992ca4bb6d4887c74880) no-repeat;
  background-size: 332rpx 97px;
  background-position: -48rpx 0;
}

.newsMusic-info {
  color: #888;
  font-size: 22rpx;
}

.newsong-sq {
  display: inline-block;
  width: 24rpx;
  height: 16rpx;
  margin-right: 8rpx;
  background: url(//s3.music.126.net/m/s/img/index_icon_2x.png?5207a28c3767992ca4bb6d4887c74880) no-repeat;
  background-size: 332rpx 97px;
}

.swiper-box {
  padding-top: 30rpx;
  background: #d44439;
  height: 230rpx;
}

swiper {
  height: 340rpx;
}

